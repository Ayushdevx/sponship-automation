# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=hackfinity_platform

# Email Configuration (Gmail)
# Use App Password (not your regular Gmail password)
EMAIL_ADDRESS=your_hackfinity_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# AI Configuration (Optional - for enhanced email generation)
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security Settings (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Scheduling Settings
SCHEDULER_INTERVAL=60  # Check for scheduled emails every 60 seconds
MAX_EMAIL_RETRY=3      # Maximum retry attempts for failed emails

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Certificate Settings
CERTIFICATE_TEMPLATE_PATH=templates/certificates/
OUTPUT_PATH=output/certificates/

# Analytics Settings
ANALYTICS_RETENTION_DAYS=365  # Keep analytics data for 1 year
